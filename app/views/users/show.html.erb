<h1>User Show Page</h1>

<div>Name: <%= @user.display_name %></div><br>
<div>Events list for this user:</div>
<ul>
    <% @user.events.each do |event| %>
        <li><%= event.name %></li><br>
    <% end %>
    <div><%= link_to "Show All Events", events_path %> </div>
</ul>
<div>Hotels list for this user:</div>
<ul>
    <% @user.hotels.each do |hotel| %>
        <li>Name: <%= hotel.name %></li>
        <li>length of stay: <%= @user.length_of_stay_by_hotel(hotel.id) %> days</li><br>
    <% end %>
</ul>

<%= button_to "Attend new event", events_path, method: :get %>
<%= button_to "Log Out", sessions_logout_path, method: :post %>
