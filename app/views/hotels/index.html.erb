<div class="display-4 custom-title"> Hotels in association with M&MEvents </div>
<div class="container notification margin-top">

    <div id="filter-form">
        <%= form_tag hotels_path, method: "GET" do %>
            <%= label_tag "Filter by location: " %>
            <%= collection_select :location, :id, Location.all, :id, :city, prompt: "Select location", selected: @location %>
            <%= submit_tag "Filter" %>
        <% end %>
    </div>
    <%= button_to "all hotels", hotels_path, method: :get %>

    <ul class="hotels-titles">
        <% @hotels.each do |hotel| %>
            <%# <li><%= link_to hotel.name, hotel_path(hotel.id), class: "no-text-decoration hotel-links" %>
            <div class="hotel-card">
                <a href ="hotels/<%=hotel.id%>">
                    <img id="event-img" src="https://fancycrave.com/wp-content/uploads/2019/12/Free-Nature-Pictures-min.jpg" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <p class="card-text"> <%= hotel.name %> in <%= hotel.location.city %></p>
                </div>
            </div>
        <% end %>
    </ul>
</div>