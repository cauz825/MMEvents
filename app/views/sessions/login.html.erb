<h1> Log In Page </h1>

<% if flash.now[:error] %>
    <div class="login_error"><%= flash.now[:error] %></div><br>
<% end %>


<%= form_tag sessions_login_path, method: :post do %>
    <%= label_tag :username%>
    <%= text_field_tag :username%><br><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br><br>

    <%= submit_tag "LogIn"%>
<% end %>